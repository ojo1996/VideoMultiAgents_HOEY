{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["alpha", "seeds", "metrics"],
  "properties": {
    "alpha": {
      "type": "object",
      "description": "Alpha values used for this model"
    },
    "seeds": {
      "type": "array",
      "items": {"type": "integer"},
      "description": "Random seeds used for evaluation"
    },
    "metrics": {
      "type": "object",
      "description": "Task metrics (flat and hierarchical keys)",
      "patternProperties": {
        "^[a-zA-Z0-9_/]+$": {
          "type": "number"
        }
      }
    },
    "metrics_ci": {
      "type": "object",
      "description": "95% confidence intervals for metrics",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "array",
          "items": {"type": "number"},
          "minItems": 2,
          "maxItems": 2
        }
      }
    }
  },
  "additionalProperties": false
}
